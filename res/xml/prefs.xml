           android:summary="@string/pref_scale_summary"
           android:entries="@array/scaleMode" android:entryValues="@array/scaleMode_v"/>
	    
		<CheckBoxPreference android:key="showPageNum" android:title="@string/pref_show_page_number_title" android:defaultValue="true"
	        android:summary="@string/pref_show_page_num_summary"/>
	    
