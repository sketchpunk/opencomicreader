		<CheckBoxPreference android:key="flingEnabled" android:title="@string/pref_fling_title" android:defaultValue="true"
	        android:summary="@string/pref_fling_summary"/>
		
	    <CheckBoxPreference android:key="preLoading" android:title="@string/pref_preloading_title" android:defaultValue="false"
	        android:summary="@string/pref_preloading_summary"/>
	    
	    <CheckBoxPreference android:key="keepScreenOn" android:title="@string/pref_keepscreenon_title" android:defaultValue="true"
	        android:summary="@string/pref_keepscreenon_summary"/>
